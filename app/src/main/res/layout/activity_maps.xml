<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313">

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400dp"
        android:background="@drawable/bg_prescan">

        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="280dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/bg_lightgreykecil">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_outline_battery_charging_full_24"></ImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/semibold"
                        android:text="Battery"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/baterry"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/bolditalic"
                        android:text="@string/battery"
                        android:textAlignment="center"
                        android:textColor="#85b5f9"
                        android:textSize="20dp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:background="@drawable/bg_lightgreykecil">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_baseline_linear_scale_24"></ImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/semibold"
                        android:text="Jarak"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/jarak"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/bolditalic"
                        android:text="50"
                        android:textAlignment="center"
                        android:textColor="#cbffbf"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/bolditalic"
                        android:text="km"
                        android:textAlignment="center"
                        android:textColor="#cbffbf"
                        android:textSize="10dp"></TextView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/bg_lightgreykecil">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_baseline_brightness_5_24"></ImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/semibold"
                        android:text="Suhu"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/bolditalic"
                        android:text="18"
                        android:textAlignment="center"
                        android:textColor="#ffe652"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/bolditalic"
                        android:text="o"
                        android:textAlignment="center"
                        android:textColor="#ffe652"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="37dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/bolditalic"
                        android:text="C"
                        android:textAlignment="center"
                        android:textColor="#ffe652"
                        android:textSize="12dp"></TextView>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/semibold"
                android:text="Saldo"
                android:textColor="@color/white"
                android:textSize="12dp"></TextView>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/monserat"
                android:text="Rp100.000"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_timer">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bolditalic"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="14dp"></TextView>

            </LinearLayout>

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="52dp"
                android:background="@drawable/line"></View>

            <TextView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/bolditalic"
                android:text="25"
                android:textAlignment="center"
                android:textColor="#82BE65"
                android:textSize="120dp"></TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:fontFamily="@font/bolditalic"
                android:text="km/h"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="70dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg_prescan">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="70dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/semibold"
                android:text="Tagihan"
                android:textColor="@color/white"
                android:textSize="12dp"></TextView>

            <TextView
                android:id="@+id/tagihan"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/monserat"
                android:text="Rp80.000"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>




        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_stnby"
        android:visibility="visible"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="526dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg_buttongray"
        android:fontFamily="@font/semibold"
        android:onClick="standBy"
        android:text="Standby"
        android:textAllCaps="false"
        android:textSize="10dp">

    </Button>

    <Button
        android:id="@+id/btn_resume"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="526dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg_buttongray"
        android:fontFamily="@font/semibold"
        android:onClick="standBy"
        android:text="Resume"
        android:textAllCaps="false"
        android:textSize="10dp">

    </Button>

    <Button
        android:id="@+id/btn_off"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="605dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg_buttonred"
        android:fontFamily="@font/semibold"
        android:text="OFF"
        android:textAllCaps="false"
        android:textSize="10dp">

    </Button>

</RelativeLayout>
